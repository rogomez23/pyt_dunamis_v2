@{
    ViewData["Title"] = "Login";
    Layout = null;
}

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-danger">
        @ViewBag.Mensaje
    </div>
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>DUNAMIS - Inicio de Sesión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <div class="login-background">
        <div class="animated-squares">
            <div class="square square1"></div>
            <div class="square square2"></div>
            <div class="square square3"></div>
            <div class="square square4"></div>
            <div class="square square5"></div>
            <div class="square square6"></div>
            <div class="square square7"></div>
            <div class="square square8"></div>
            <div class="square square9"></div>
            <div class="square square10"></div>
        </div>

        <div class="login-container text-center">
            
            <div class="login-card p-4 shadow">
                <h3 class="mb-2 navbar-brand text-black-50">Bienvenido a</h3>
                <h1 class="mb-2">DUNAMIS</h1>
                <h3 class="mb-4 navbar-brand text-black-50">Sistema de Recursos Humanos</h3>
                <form method="post" asp-controller="Login" asp-action="Login">
                    <!-- Campo Usuario -->
                    <div class="form-group mb-3 text-start">
                        <label for="Usuario" class="form-label">Usuario</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input type="text" class="form-control" name="Usuario" id="Usuario" placeholder="Ingrese su usuario" required />
                        </div>
                    </div>

                    <!-- Campo Contraseña -->
                    <div class="form-group mb-4 text-start">
                        <label for="Contrasena" class="form-label">Contraseña</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                            <input type="password" class="form-control" name="Contrasena" id="Contrasena" placeholder="Ingrese su contraseña" required />
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
