@model ColaboradorViewModel

<div class="modal fade" id="eliminarColaboradorModal" tabindex="-1" aria-labelledby="eliminarColaboradorModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="eliminarColaboradorModalLabel">Eliminar Colaborador</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formEliminarColaborador" method="post">
                    <input type="hidden" asp-for="id_colaborador"/>
                    <input type="hidden" asp-for="fecha_ingreso"/>
                    <input type="hidden" asp-for="persona_id_persona"/>
                    <input type="hidden" asp-for="catalogo_perfil_puesto_id_perfil_puesto"/>

                    <p>¿Estás seguro que deseas eliminar el siguiente colaborador?</p>
                    <p><strong>@Model.id_colaborador</strong></p>

                    <div class="form-check my-3">
                        <input class="form-check-input" type="checkbox" asp-for="inactivo" id="inactivoEliminarCheck" />
                        <label class="form-check-label" asp-for="inactivo">
                            Activar / Inactivar
                        </label>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
