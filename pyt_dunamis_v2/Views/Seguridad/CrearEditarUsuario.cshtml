@model Entidades.Usuarios

@{
    await Html.RenderPartialAsync("_ConfirmModal");
}

<h2>@(Model.id_usuario == 0 ? "Crear Usuario" : "Editar Usuario")</h2>

<form id="@((Model.id_usuario == 0) ? "addPermissionForm" : "editPermissionForm")" asp-action="CrearEditarUsuario" asp-controller="Seguridad" method="post">
    <input type="hidden" asp-for="id_usuario" />

    <div class="form-group">
        <label asp-for="nombre_usuario" class="control-label"></label>
        <input asp-for="nombre_usuario" class="form-control" />
        <span asp-validation-for="nombre_usuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="contrasena" class="control-label"></label>
        <input asp-for="contrasena" type="password" class="form-control" />
        <span asp-validation-for="contrasena" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="colaborador_id_colaborador" class="control-label"></label>
        <input asp-for="colaborador_id_colaborador" class="form-control" />
        <span asp-validation-for="colaborador_id_colaborador" class="text-danger"></span>
    </div>

    @if (Model.id_usuario == 0)
    {
        <button type="button" class="btn btn-primary action-button" data-action-type="add" data-form-id="addPermissionForm">Guardar</button>
    }
    else
    {
        <button type="button" class="btn btn-primary action-button" data-action-type="edit" data-form-id="editPermissionForm">Guardar</button>
    }
    <a asp-action="Usuarios" class="btn btn-secondary">Cancelar</a>
</form>
