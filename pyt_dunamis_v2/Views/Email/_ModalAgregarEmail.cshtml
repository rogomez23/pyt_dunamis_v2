@model EmailViewModel

<div class="modal fade" id="agregarEmailModal" tabindex="-1" aria-labelledby="agregarEmailModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="agregarEmailModalLabel">Agregar Email</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form id="formAgregarEmail" method="post">
                    <input type="hidden" asp-for="persona_id_persona" />
                    <input type="hidden" name="origen" value="@Context.Request.Query["origen"]" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="email" class="control-label"></label>
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="catalogo_tipo_contacto_id_catalogo_tipo_contacto" class="control-label"></label>
                        <select asp-for="catalogo_tipo_contacto_id_catalogo_tipo_contacto" class="form-control" asp-items="Model.TiposContacto"></select>
                        <span asp-validation-for="catalogo_tipo_contacto_id_catalogo_tipo_contacto" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Agregar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
