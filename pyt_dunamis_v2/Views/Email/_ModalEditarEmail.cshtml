@model EmailViewModel

<div class="modal fade" id="editarEmailModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Email</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formEditarEmail" method="post">
                    <input type="hidden" asp-for="id_email" />
                    <input type="hidden" asp-for="persona_id_persona" />
                    <input type="hidden" name="origen" value="@Context.Request.Query["origen"]" />

                    <div class="mb-3">
                        <label asp-for="email" class="form-label"></label>
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="catalogo_tipo_contacto_id_catalogo_tipo_contacto" class="form-label"></label>
                        <select asp-for="catalogo_tipo_contacto_id_catalogo_tipo_contacto"
                                asp-items="Model.TiposContacto"
                                class="form-select"></select>
                        <span asp-validation-for="catalogo_tipo_contacto_id_catalogo_tipo_contacto"
                              class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                </form>
            </div>
        </div>
    </div>
</div>


