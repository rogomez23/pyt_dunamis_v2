<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - pyt_dunamis_v2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/pyt_dunamis_v2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @using pyt_dunamis_v2.Helpers


</head>
<body>
    <!-- Navbar superior -->
    <header class="navbar shadow-sm sticky-top px-3 position-relative" style="height: 70px;">
        <div class="container-fluid d-flex align-items-center justify-content-between h-100">

            <!-- Botón Menú (izquierda) -->
            <button class="btn btn-outline-secondary btn-sm d-md-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu">
                <i class="bi bi-list fs-5"></i>
            </button>

            <!-- Botón mostrar búsqueda (solo en móviles) -->
            <button class="btn btn-outline-primary btn-sm d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#busquedaCollapse" aria-expanded="false" aria-controls="busquedaCollapse">
                <i class="bi bi-search fs-5"></i>
            </button>

            <!-- Logo o nombre (derecha) -->
            <a class="navbar-brand text-black-50 fw-bold ms-auto fs-3" asp-area="" asp-controller="Home" asp-action="Index">DUNAMIS</a>
        </div>

        <!-- Sección centrada de búsqueda (visible en md+) -->
        <div class="d-none d-md-flex align-items-center gap-2 position-absolute top-50 start-50 translate-middle">
            <select class="form-select form-select-sm w-auto" id="criterioBusqueda" name="criterio">
                <option value="1" selected>Contrato</option>
                <option value="2">Cédula</option>
                <option value="3">Correo</option>
            </select>
            <input type="text" class="form-control form-control-sm w-auto" id="valorBusqueda" name="valor" placeholder="Buscar..." />
            <button type="button" id="btnBuscarPersona" class="btn btn-sm btn-primary">Buscar</button>
        </div>

        <!-- Sección colapsable de búsqueda (visible en móviles) -->
        <div class="collapse d-md-none px-3 mt-2" id="busquedaCollapse">
            <div class="d-flex flex-column gap-2">
                <select class="form-select form-select-sm" id="criterioBusquedaMovil" name="criterio">
                    <option value="1" selected>Contrato</option>
                    <option value="2">Cédula</option>
                    <option value="3">Correo</option>
                </select>
                <input type="text" class="form-control form-control-sm" id="valorBusquedaMovil" name="valor" placeholder="Buscar..." />
                <button type="button" class="btn btn-sm btn-primary">Buscar</button>
            </div>
        </div>
    </header>

    <!-- Contenedor principal -->
    <div class="app-wrapper">
        <!-- Sidebar visible en md+ -->
        <div class="sidebar d-none d-md-block">
            <nav class="nav flex-column p-3">

                @if (Context.Session.GetString("Usuario") != null)
                {
                    <span class="me-2 text-black">Bienvenido: @Context.Session.GetString("Usuario")</span>

                }

                <a class="nav-link nav-link-custom"
                asp-controller="Home" asp-action="Index"> <i class="bi bi-house-door me-2"></i>Inicio</a>

                <!-- órdenes (Submenú) -->

                <a href="#submenuOrdenes"
                class="nav-link nav-link-custom d-flex align-items-center gap-2"
                data-bs-toggle="collapse"
                role="button"
                aria-expanded="false"
                aria-controls="submenuOrdenes">
                    <i class="bi bi-card-checklist"></i> Órdenes de trabajo

                </a>
                <div class="collapse" id="submenuOrdenes">
                    <a class="nav-link nav-link-custom ms-3"

                    asp-controller="Ordenes" asp-action="CrearOrden">Crear órden</a>

                    @if (SesionHelper.TienePermiso(Context, "ACCESO_BANDEJA_ORDENES"))
                    {
                        <a class="nav-link nav-link-custom ms-3"
                        asp-controller="Ordenes" asp-action="BandejaOrdenes">Bandeja de órdenes</a>
                    }

                    <a class="nav-link nav-link-custom ms-3"
                    asp-controller="Ordenes" asp-action="PanelOrdenes">Órdenes asignadas</a>

                    @if (SesionHelper.TienePermiso(Context, "ACCESO_APROBACION_ORDENES"))
                    {
                        <a class="nav-link nav-link-custom ms-3"
                        asp-controller="Ordenes" asp-action="AprobacionOrdenes">Aprobación de órdenes</a>

                    }

                </div>


                <!-- Mantenimientos (Submenú) -->
                <a href="#submenuMantenimientos"
                class="nav-link nav-link-custom d-flex align-items-center gap-2"
                data-bs-toggle="collapse"
                role="button"
                aria-expanded="false"
                aria-controls="submenuMantenimientos">
                    <i class="bi bi-tools"></i> Mantenimientos
                </a>
                <div class="collapse" id="submenuMantenimientos">
                    <a class="nav-link nav-link-custom ms-4"
                    asp-controller="Persona" asp-action="InsertarColaborador">Registrar Colaborador</a>
                    <a class="nav-link nav-link-custom ms-4"
                    asp-controller="Persona" asp-action="ListaColaboradores">Lista Colaboradores</a>
                    <a class="nav-link nav-link-custom ms-4"
                    asp-controller="Seguridad" asp-action="Usuarios">Usuarios</a>



                </div>

                <!-- Recursos humanos (Submenú) -->
                <a href="#submenuRH"
                class="nav-link nav-link-custom d-flex align-items-center gap-2"
                data-bs-toggle="collapse"
                role="button"
                aria-expanded="false"
                aria-controls="submenuRH">
                    <i class="bi bi-person-badge"></i> Recursos humanos
                </a>
                <div class="collapse" id="submenuRH">
                    <a class="nav-link nav-link-custom ms-4"
                    asp-controller="Vacaciones" asp-action="PanelVacaciones">Vacaciones</a>
                    <a class="nav-link nav-link-custom ms-4"
                    asp-controller="HorasExtra" asp-action="PanelHorasExtra">Horas extra</a>

                    @if (SesionHelper.TienePermiso(Context, "GESTIONAR_BONIFICACIONES_PLANILLA"))
                    {
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Bonificaciones" asp-action="BonificacionesPuesto">Bonificaciones</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Aguinaldo</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Liquidaciones</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Salario</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Deducciones</a>
                        
                    }


                </div>

                <!-- Reportes (Submenú) -->
                <a href="#submenuReportes"
                   class="nav-link nav-link-custom d-flex align-items-center gap-2"
                   data-bs-toggle="collapse"
                   role="button"
                   aria-expanded="false"
                   aria-controls="submenuReportes">
                    <i class="bi bi-tools"></i> Reportes
                </a>
                <div class="collapse" id="submenuReportes">
                    <a class="nav-link nav-link-custom ms-4"
                       asp-controller="Reportes" asp-action="ReportesEmpleados">Reportes Empleados</a>
                    <a class="nav-link nav-link-custom ms-4"
                       asp-controller="Reportes" asp-action="ReportesOrdenes">Reportes Ordenes</a>
                    <a class="nav-link nav-link-custom ms-4"
                       asp-controller="Reportes" asp-action="ReportesSalarios">Reportes Salarios</a>
                    <a class="nav-link nav-link-custom ms-4"
                       asp-controller="Reportes" asp-action="ReportesVacaciones">Reportes Vacaciones</a>



                </div>


                <a class="nav-link nav-link-custom"
                   asp-controller="Home" asp-action="Privacy"> <i class="bi bi-shield-lock me-2"></i> Privacy</a>

                <a class="nav-link nav-link-custom"
                   asp-controller="Login" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión</a>


            </nav>
        </div>

        <!-- Sidebar como offcanvas en pantallas pequeñas -->
        <div class="offcanvas offcanvas-start sidebar d-md-none" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="sidebarMenuLabel">Menú</h5>
                <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Cerrar"></button>
            </div>
            <div class="offcanvas-body p-0">
                <nav class="nav flex-column p-3">

                    @if (Context.Session.GetString("Usuario") != null)
                    {
                        <span class="me-2 text-black">Bienvenido: @Context.Session.GetString("Usuario")</span>

                    }

                    <a class="nav-link nav-link-custom"
                       asp-controller="Home" asp-action="Index"> <i class="bi bi-house-door me-2"></i>Inicio</a>

                    <!-- órdenes (Submenú) -->

                    <a href="#submenuOrdenes"
                       class="nav-link nav-link-custom d-flex align-items-center gap-2"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="submenuOrdenes">
                        <i class="bi bi-card-checklist"></i> Órdenes de trabajo

                    </a>
                    <div class="collapse" id="submenuOrdenes">
                        <a class="nav-link nav-link-custom ms-3"
                           asp-controller="Ordenes" asp-action="CrearOrden">Crear órden</a>

                        @if (SesionHelper.TienePermiso(Context, "ACCESO_BANDEJA_ORDENES"))
                        {
                            <a class="nav-link nav-link-custom ms-3"
                               asp-controller="Ordenes" asp-action="BandejaOrdenes">Bandeja de órdenes</a>
                        }
                        <a class="nav-link nav-link-custom ms-3"
                           asp-controller="Ordenes" asp-action="PanelOrdenes">Órdenes asignadas</a>

                    </div>


                    <!-- Mantenimientos (Submenú) -->
                    <a href="#submenuMantenimientos"
                       class="nav-link nav-link-custom d-flex align-items-center gap-2"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="submenuMantenimientos">
                        <i class="bi bi-tools"></i> Mantenimientos
                    </a>
                    <div class="collapse" id="submenuMantenimientos">
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarColaborador">Registrar Colaborador</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="ListaColaboradores">Lista Colaboradores</a>



                    </div>

                    <!-- Recursos humanos (Submenú) -->
                    <a href="#submenuRH"
                       class="nav-link nav-link-custom d-flex align-items-center gap-2"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="submenuRH">
                        <i class="bi bi-person-badge"></i> Recursos humanos
                    </a>
                    <div class="collapse" id="submenuRH">
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Vacaciones" asp-action="PanelVacaciones">Vacaciones</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="HorasExtra" asp-action="PanelHorasExtra">Horas extra</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Bonificaciones</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Aguinaldo</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Liquidaciones</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Salario</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Persona" asp-action="InsertarPersonaCompleta">Deducciones</a>
                    </div>

                    <!-- Reportes (Submenú) -->
                    <a href="#submenuReportes"
                       class="nav-link nav-link-custom d-flex align-items-center gap-2"
                       data-bs-toggle="collapse"
                       role="button"
                       aria-expanded="false"
                       aria-controls="submenuReportes">
                        <i class="bi bi-tools"></i> Reportes
                    </a>
                    <div class="collapse" id="submenuReportes">
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Reportes" asp-action="ReportesEmpleados">Reportes Empleados</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Reportes" asp-action="ReportesOrdenes">Reportes Ordenes</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Reportes" asp-action="ReportesSalarios">Reportes Salarios</a>
                        <a class="nav-link nav-link-custom ms-4"
                           asp-controller="Reportes" asp-action="ReportesVacaciones">Reportes Vacaciones</a>



                    </div>


                    <a class="nav-link nav-link-custom"
                       asp-controller="Home" asp-action="Privacy"> <i class="bi bi-shield-lock me-2"></i> Privacy</a>

                    <a class="nav-link nav-link-custom"
                       asp-controller="Login" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Cerrar sesión</a>


                </nav>
            </div>
        </div>

        <!-- Contenido principal + footer -->
        <div class="content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            <footer class="text-muted text-center text-white">
                &copy; 2025 - pyt_dunamis_v2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </footer>
        </div>
        
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/validaciones_generales.js"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/5.0.7/jquery.inputmask.min.js"></script>
</body>

@section Scripts {
    <!--<partial name="_ValidationScriptsPartial" />-->
    
    <script src="~/js/modal.js"></script>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    
    
    
}

</html>
