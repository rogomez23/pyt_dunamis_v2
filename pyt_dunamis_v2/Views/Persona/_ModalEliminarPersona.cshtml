@model Entidades.Persona

<div class="modal fade" id="eliminarPersonaModal" tabindex="-1" aria-labelledby="eliminarPersonaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="eliminarPersonaModalLabel">Eliminar Persona</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <div class="modal-body">
                <form asp-action="EliminarPersona" asp-controller="Persona" method="post">
                    <input type="hidden" asp-for="id_persona" />
                    <input type="hidden" asp-for="nombre" />
                    <input type="hidden" asp-for="apellido_1"/>
                    <input type="hidden" asp-for="apellido_2"/>
                    <input type="hidden" asp-for="fecha_nacimiento"/>

                    <p>¿Estás seguro que deseas eliminar a la siguiente persona?</p>
                    <p>
                        <strong>@Model.nombre @Model.apellido_1 @Model.apellido_2</strong><br />
                        <small class="text-muted">@Model.fecha_nacimiento.ToString("yyyy-MM-dd")</small>
                    </p>

                    <div class="form-check my-3">
                        <input class="form-check-input" type="checkbox" asp-for="inactivo" id="inactivoEliminarCheck" />
                        <label class="form-check-label" asp-for="inactivo">
                            Marcar como eliminado
                        </label>
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
