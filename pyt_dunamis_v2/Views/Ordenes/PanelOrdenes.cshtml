@model pyt_dunamis_v2.Models.OrdenesViewModel
@using pyt_dunamis_v2.Helpers

@{
    ViewData["Title"] = "Panel de órdenes";
}

<h2 class="mb-4">Panel de órdenes</h2>
<ul class="nav nav-tabs mb-3">

    @if (SesionHelper.TienePermiso(Context, "GESTIONAR_ORDENES_JEFES"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Ordenes" asp-action="BandejaOrdenes">Bandeja de Órdenes</a>
        </li>
    }

</ul>

<div class="row">
    <!-- Datos del colaborador -->
    <div class="col-md-5">
        <h4>Información del Colaborador</h4>
        <div class="card">
            <div class="card-body">
                <p><strong>ID:</strong> @Model.Colaborador.id_colaborador</p>
                <p><strong>Nombre:</strong> @Model.Colaborador.Persona.nombre @Model.Colaborador.Persona.apellido_1 @Model.Colaborador.Persona.apellido_2</p>
                <p><strong>Puesto:</strong> @Model.Colaborador.Catalogo_perfil_puesto.descripcion_puesto</p>
                <p><strong>Fecha de ingreso:</strong> @Model.Colaborador.fecha_ingreso.ToShortDateString()</p>
            </div>
        </div>
    </div>
    <!-- Tabla de historial -->
    <div class="col-md-7">
        <h4>Ordenes de trabajo</h4>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Número de orden</th>
                    <th>Contrato de cliente</th>
                    <th>Tipo de orden</th>
                    <th>Fecha de visita</th>
                    <th>Detalle de la orden</th>
                    <th>Estado de la orden</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.HistorialOrdenes)
                {
                    <tr>
                        <td>@item.id_orden</td>
                        <td>@item.contrato_cliente</td>
                        <td>@item.tipo_trabajo</td>
                        <td>@item.fecha_visita.ToShortDateString()</td>
                        <td>@item.descripcion_trabajo</td>
                        <td>@item.Estado_orden?.descripcion_estado</td>
                        <td>
                            <i class="bi bi-pencil-square text-warning"
                               style="cursor:pointer; font-size: 1.2rem;"
                               title="Editar"
                               onclick="mostrarModalEditarOrden(@item.id_orden, 'Panel')">
                            </i>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div id="contenedor-modal-editar-orden"></div>
<div id="contenedor-modal-eliminar-orden"></div>

@section Scripts {
    <script src="~/js/modal.js"></script>
    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}