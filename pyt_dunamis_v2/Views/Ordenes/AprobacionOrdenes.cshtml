@model List<Entidades.Ordenes>
@using pyt_dunamis_v2.Helpers

@{
    ViewData["Title"] = "Aprobación de Vacaciones";
    var idColaborador = ViewBag.IdColaborador as int?
                    ?? Model.FirstOrDefault()?.Colaborador?.id_colaborador;
}

<h2>Aprobación de Órdenes</h2>

<ul class="nav nav-tabs mb-3">

    @if (SesionHelper.TienePermiso(Context, "GESTIONAR_ORDENES_PLANILLA"))
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Ordenes" asp-action="AprobacionOrdenes">Aprobar Órdenes</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Ordenes" asp-action="EjecutarOrdenesNomina">Procesar a Nómina</a>
        </li>
    }


</ul>

<form asp-action="ActualizarEstadosOrdenes" method="post">
    <div class="mb-3">

        @if (SesionHelper.TienePermiso(Context, "GESTIONAR_ORDENES_JEFES"))
        {
            <button type="submit" name="nuevoEstado" value="2" class="btn btn-success">Aceptar</button>
            <button type="submit" name="nuevoEstado" value="5" class="btn btn-danger">Rechazar</button>
            <!-- Enlace de regreso -->
            <a asp-controller="Ordenes"
               asp-action="PanelOrdenes"
               asp-route-id_colaborador="@idColaborador"
               class="btn btn-secondary">
                Regresar
            </a>
        }

        @if (SesionHelper.TienePermiso(Context, "GESTIONAR_ORDENES_PLANILLA"))
        {
            <button type="submit" name="nuevoEstado" value="3" class="btn btn-success">Aceptar</button>
            <button type="submit" name="nuevoEstado" value="5" class="btn btn-danger">Rechazar</button>
            <!-- Enlace de regreso -->
            <a asp-controller="Home"
               asp-action="Index"
               class="btn btn-secondary">
                Regresar
            </a>
        }



    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="select-all" />
                </th>
                <th>Colaborador</th>
                <th>Fecha de órden</th>
                <th>Estado de la órden</th>
                <th>Estado de aprobación</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vac in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@vac.id_orden" />
                    </td>
                    <td>@vac.Colaborador?.Persona?.nombre @vac.Colaborador?.Persona?.apellido_1 @vac.Colaborador?.Persona?.apellido_2</td>
                    <td>@vac.fecha_visita.ToShortDateString()</td>
                    <td>@vac.Estado_orden.descripcion_estado</td>
                    <td>@vac.Catalogo_estado_aprobacion.descripcion_estado</td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    <script>
        document.getElementById("select-all").addEventListener("change", function () {
            const checkboxes = document.querySelectorAll("input[name='ids']");
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}
