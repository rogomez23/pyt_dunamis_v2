@model List<Entidades.Horas_extra>
@using pyt_dunamis_v2.Helpers

@{
    ViewData["Title"] = "Aprobación de Vacaciones";
    // Suponemos que el id_colaborador se pasó desde el controlador,
    // ya sea en ViewBag o en ViewData:
    var idColaborador = ViewBag.IdColaborador as int?
                    ?? Model.FirstOrDefault()?.Colaborador?.id_colaborador;
}

<h2>Aprobación de Horas Extra</h2>

<form asp-action="ActualizarEstadosHorasExtra" method="post">
    <div class="mb-3">

        @if (SesionHelper.TienePermiso(Context, "GESTIONAR_HORAS_JEFES"))
        {
            <button type="submit" name="nuevoEstado" value="2" class="btn btn-success">Aceptar</button>
        }

        @if (SesionHelper.TienePermiso(Context, "GESTIONAR_HORAS_PLANILLA"))
        {
            <button type="submit" name="nuevoEstado" value="3" class="btn btn-success">Aceptar</button>
        }
        <button type="submit" name="nuevoEstado" value="5" class="btn btn-danger">Rechazar</button>
        <!-- Enlace de regreso -->
        <a asp-controller="HorasExtra"
           asp-action="PanelHorasExtra"
           asp-route-id_colaborador="@idColaborador"
           class="btn btn-secondary">
            Regresar
        </a>
    </div>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="select-all" />
                </th>
                <th>Colaborador</th>
                <th>Fecha de Solicitud</th>
                <th>Fecha de ejecución</th>
                <th>Cantidad de horas extra</th>
                <th>Estado</th>
                <th>Costo de la hora extra</th>
                <th>Monto total a pagar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vac in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="ids" value="@vac.id_horas_extra" />
                    </td>
                    <td>@vac.Colaborador?.Persona?.nombre @vac.Colaborador?.Persona?.apellido_1 @vac.Colaborador?.Persona?.apellido_2</td>
                    <td>@vac.fecha_solicitud.ToShortDateString()</td>
                    <td>@vac.fecha_hora_extras.ToShortDateString()</td>
                    <td>@vac.cantidad_extras</td>
                    <td>@vac.Catalogo_estado_aprobacion.descripcion_estado</td>
                    <td>@vac.tarifa_por_hora.ToString("C")</td>
                    <td>@vac.monto_extras.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    <script>
        document.getElementById("select-all").addEventListener("change", function () {
            const checkboxes = document.querySelectorAll("input[name='ids']");
            checkboxes.forEach(cb => cb.checked = this.checked);
        });
    </script>
}
